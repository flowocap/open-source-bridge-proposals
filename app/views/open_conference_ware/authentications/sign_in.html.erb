<h2>Sign in using any of the following services:</h2>

<div id="sign_in_buttons">
  <div class="auth-provider">
    <a class="btn btn-social btn-github" href="<%= auth_path(:github) %>">
      <i class="fa fa-github"></i> Sign in with GitHub
    </a>
  </div>

  <div class="auth-provider">
    <a class="btn btn-social btn-google-plus" href="<%= auth_path(:google_oauth2) %>">
      <i class="fa fa-google-plus"></i> Sign in with Google
    </a>
  </div>

  <div class="auth-provider">
    <a class="btn btn-social btn-twitter" href="<%= auth_path(:twitter) %>">
      <i class="fa fa-twitter"></i> Sign in with Twitter
    </a>
  </div>

  <div class="auth-provider">
    <a class="btn btn-social btn-eventbrite" href="<%= auth_path(:eventbrite) %>">
      <i class="fa fa-arrow-circle-right"></i> Sign in with Eventbrite
    </a>
  </div>
</div>

<div id="sign_in_open_id">
  <%= render "openid" %>
</div>

